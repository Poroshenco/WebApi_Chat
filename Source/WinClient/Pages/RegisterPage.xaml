<Page x:Class="WinClient.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinClient.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="150">
            <TextBlock Text="Login" Margin="8 8 8 0" />
            <TextBox Margin="8" />
            <TextBlock Text="Password" Margin="8 8 8 0" />
            <PasswordBox Margin="8" />
            <Button Content="Register" Margin="8" Click="Register_OnClick" />
        </StackPanel>
    </Grid>
</Page>